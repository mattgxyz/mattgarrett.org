{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="float-right">
    <a href="{{ path('admin-category-edit') }}" class="btn btn-success">+ Create new</a>
    </div>
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Path</th>
                <th>Documentation</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin-category-edit', {'id': category.id}) }}">{{ category.name }}</a></td>
                <td>{{ category.path }}</td>
                <td>
{#                    {{ category.documentations|join('<br />')|raw }}#}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
