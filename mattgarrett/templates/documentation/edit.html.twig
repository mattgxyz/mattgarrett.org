{% extends 'base.html.twig' %}

{% block title %}Documentation{% endblock %}

{% block body %}
    <h1>Edit Documentation</h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <div class="form-group row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button class="btn btn-success">{{ button_label|default('Save') }}</button>
            <a href="{{ path('admin-documentation') }}" class="btn btn-info">Back to list</a>
            {% if documentation.id %}
                <a href="{{ path('admin-documentation-delete', {documentation:documentation.id}) }}"
                   onclick="return confirm('Are you SURE you want to delete this documentation?');"
                   class="btn btn-danger">Delete</a>
            {% endif %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
